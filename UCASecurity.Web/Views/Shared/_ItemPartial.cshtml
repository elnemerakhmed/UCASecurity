@inject UCASecurity.Web.Resources.LocalizationService SharedLocalizer
@model ItemViewModel

@{ 
    string image = "/thumbnails/" + Model.Image;
}
<div class="pt-2 col-12 col-md-3 col-sm-6">
    <div class="card">
        <div style="height: 300px; background-image: url(@image); background-size: cover;"></div>
        <div class="card-body d-flex justify-content-between">
            <div>
                <h5 class="card-text">
                    <a class="no-underline" asp-controller="@Model.Controller" asp-action="@Model.Action">
                        @SharedLocalizer.GetLocalizedHtmlString(Model.Title)
                    </a>
                </h5>
            </div>
            @if (Model.HasInfo)
            {
                <div>
                    <a asp-controller="Home" asp-action="Learn" asp-route-id="@Model.Action">
                        <img style="width: 20px; height: 20px" src="~/images/info.png" alt="Info" />
                    </a>
                </div>
            } else
            {
                <div></div>
            }
        </div>
    </div>
</div>